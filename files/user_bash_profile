# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs
alias vim='nvim'
export EDITOR=vim

alias chmod='chmod -c'
alias cpr=' cp -rpv'
alias df=' df -kTh'
alias df1=' df -iTa'
alias diff='diff -up'
alias dsiz='du -sk * | sort -n --'
alias du=' du -kh'
alias du1='echo *|tr " " "n" |xargs -iFF  du -hs FF|sort'
alias env=' env | sort'
alias h='history'
alias inice='ionice -c3 -n7 nice'
alias j='jobs -l'
alias la=' ls -Al --color=auto'
alias lc=' ls -lAcr --color=auto'
alias less='vless'
alias lessc='ccze -A |`type -P less` -R'
alias lk=' ls -lASr --color=auto'
alias llh='ll -h'
alias lll='stat -c %a %N %G %U ${PWD}/*|sort'
alias lr=' ls -lAR --color=auto'
alias lt=' ls -lAtr --color=auto'
alias lu=' ls -lAur --color=auto'
alias lx=' ls -lAXB --color=auto'
alias mann=' man -H'
alias p=' ps -HAcl -F S -A f|uniq -w3'
alias path='echo -e ${PATH//:/\n}'
alias php='php -d report_memleaks=1 -d report_zend_debug=1 -d log_errors=0 -d ignore_repeated_errors=0 -d ignore_repeated_source=0 -d error_reporting=30719 -d display_startup_errors=1 -d display_errors=1'
alias pp=' ps -HAcl -F S -A f'
alias ps1=' ps -lFA'
alias ps2=' ps -H'
alias resetw='echo $'''33[H33[2J''''
alias top='top -c'
alias tree=' tree -Csuflapi'
alias updatedb='( ( updatedb 2>/dev/null ) & )'
alias who=' who -ar -pld'
alias wtf='watch -n 1 w -hs'
alias sudo='sudo '


